# Description: The Groff package contains programs for processing and formatting text.
# URL: http://www.gnu.org/software/groff/
# Maintainer: Werner Lemberg  wl at gnu dot org
# Packager: pierre^
source=(http://ftp.gnu.org/gnu/groff/groff-$version.tar.gz)
build()
{
cd groff-$version

PAGE="A4" ./configure --prefix=/usr \
--bindir=/bin --libdir=/lib \
--without-x --enable-multibyte

make datasubdir=/usr/share/groff

mkdir -p $PKG/usr/share/doc/groff-$version/pdf

make prefix=$PKG/usr \
bindir=$PKG/bin libdir=$PKG/lib \
datasubdir=$PKG/usr/share/groff \
mandir=$PKG/usr/share/man \
infodir=$PKG/usr/share/info \
appresdir=$PKG/etc/X11/app-defaults install

ln -sv eqn $PKG/bin/geqn
ln -sv tbl $PKG/bin/gtbl
rm -rf $PKG/usr/share/info/dir
}
devel()
{
bsdtar -cf \
$PKGMK_PACKAGE_DIR/$name.devel#$version-$release-any.pkg.tar \
usr/share/groff
rm -r usr/share/groff
}
