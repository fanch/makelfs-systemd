# Description: Protocol de synchronisation de fichiers tr√®s efficace
# URL: http://samba.anu.edu.au/rsync/
# Maintainer: git.samba.org/?p=rsync.git;a=summary
# Packager: thierryn1 at hispeed dot ch


source=( http://rsync.samba.org/ftp/rsync/rsync-$version.tar.gz\
	rsync.driver)


build() {
	cd rsync-$version
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--with-included-popt \
		--disable-acl-support
	make
	make DESTDIR=$PKG install
	install -d $PKG/etc/ports/drivers
	install -m 755 $SRC/rsync.driver $PKG/etc/ports/drivers/rsync
}
