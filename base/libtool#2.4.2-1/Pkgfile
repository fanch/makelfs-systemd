# Description: The Libtool package contains the GNU generic library support script. It wraps the complexity of using shared libraries in a consistent, portable interface.
# URL: http://www.gnu.org/software/libtool/
# Maintainer: Gordon Matzigkeit  gord at gnu dot org
# Packager: pierre^
source=(http://ftp.gnu.org/gnu/libtool/libtool-$version.tar.gz)

build()
{
cd libtool-*
./configure --prefix=/usr --bindir=/bin \
--libdir=/lib
make
# make check || true
make DESTDIR=$PKG install
rm -rf $PKG/usr/share/info/dir
}
devel()
{
cd $PKG
bsdtar -cf \
$PKGMK_PACKAGE_DIR/$name.devel#$version-$release-any.pkg.tar \
usr/share/libtool usr/share/aclocal usr/include 
rm -r usr/share/libtool usr/share/aclocal usr/include
}
