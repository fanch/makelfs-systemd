# Packager: thierryn1 at hispeed dot ch
_version=1.2-20130928
source=(ftp://dickey.his.com/dialog/$name-${_version}.tgz)

build() {
cd $name-${_version}
./configure --prefix=/usr \
--enable-nls --bindir=/bin \
--with-ncursesw \
--mandir=/usr/share/man
make
make DESTDIR=$PKG install
}
