# Description: The Texinfo package contains programs for reading, writing, and converting info pages.
# URL: http://www.gnu.org/software/texinfo
# Maintainer: Karl Berry
# Packager: pierre^
source=(http://ftp.gnu.org/gnu/$name/texinfo-$version.tar.xz)

build()
{
cd texinfo-*
./configure --prefix=/usr --bindir=/bin
make
make check
make install DESTDIR=$PKG
rm -rf $PKG/usr/share/info/dir
}
devel()
{
cd $PKG
bsdtar -cf \
$PKGMK_PACKAGE_DIR/$name.devel#$version-$release-any.pkg.tar \
usr/share/texinfo
rm -r usr/share/texinfo
}
