version=0.18.3.1
source=(http://ftp.gnu.org/gnu/gettext/gettext-$version.tar.gz)
build()
{
cd gettext-$version
cd gettext-tools
EMACS="no" ./configure --prefix=/tools --disable-shared

make -C gnulib-lib
make -C src msgfmt
make -C src msgmerge
make -C src xgettext

cp -v src/{msgfmt,msgmerge,xgettext} /tools/bin
}
