version=4.8.2
source=(\
http://ftp.gnu.org/gnu/gcc/gcc-$version/gcc-$version.tar.bz2 )

build()
{
cd  gcc-$version
mkdir -pv ../gcc-build
cd ../gcc-build

../gcc-$version/libstdc++-v3/configure \
    --host=$LFS_TGT                      \
    --prefix=/tools                      \
    --disable-multilib                   \
    --disable-shared                     \
    --disable-nls                        \
    --disable-libstdcxx-threads          \
    --disable-libstdcxx-pch              \
    --with-gxx-include-dir=/tools/$LFS_TGT/include/c++/$version
make
make install
}
