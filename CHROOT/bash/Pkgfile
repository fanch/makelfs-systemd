version=4.2
source=(http://ftp.gnu.org/gnu/bash/bash-$version.tar.gz \
http://www.linuxfromscratch.org/patches/lfs/development/bash-4.2-fixes-12.patch)
build()
{
cd bash-$version

patch -Np1 -i ../bash-4.2-fixes-12.patch

./configure --prefix=/tools \
 --without-bash-malloc

make

make install

ln -vsf bash /tools/bin/sh
mkdir  $LFS/bin
ln -vsf /tools/bin/bash $LFS/bin/bash
ln -vsf  bash $LFS/bin/sh
}
