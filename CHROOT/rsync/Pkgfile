# Description: The rsync package contains the rsync utility. This is useful for synchronizing large file archives over a network. 
# URL:  http://rsync.samba.org/
# Packager: tnuttens at gmail dot com

name=rsync
version=3.1.0

source=(http://rsync.samba.org/ftp/$name/$name-$version.tar.gz)

build()
{
cd $name-$version
./configure --prefix=/tools \
--without-included-zlib \
--disable-acl-support
make
make install
}
